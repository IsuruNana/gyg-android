<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/gyg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gyg Title"/>

        <EditText
            android:id="@+id/gyg_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gyg Category"/>

        <EditText
            android:id="@+id/gyg_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Work Location"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/job_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Pay"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/time_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <EditText
            android:id="@+id/gyg_description"
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:hint="Please enter a detailed work description here"
            android:inputType="textMultiLine" />




    </LinearLayout>






</android.support.constraint.ConstraintLayout>