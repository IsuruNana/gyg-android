<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="horizontal"
    android:id="@+id/gyg_list_layout_container">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/poster_face"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="?attr/colorPrimary"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/gyg_name"
            style="@style/TextViewWeight"
            android:text="@string/gyg_name"
            android:textColor="@color/primary"/>

        <TextView
            android:id="@+id/gyg_location"
            style="@style/TextViewWeight"
            android:text="@string/name_of_location"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/gyg_poster_name"
            style="@style/TextViewWeight"
            android:gravity="end"
            android:text="@string/gyg_poster_name"
            android:textStyle="bold"
            android:textColor="@color/accent"/>

        <TextView
            android:id="@+id/gyg_fee"
            style="@style/TextViewWeight"
            android:gravity="end"
            android:text="@string/fee"/>
    </LinearLayout>
</LinearLayout>